= form_for model, remote: true, data: data_form do |f|
  = f.label :body, t("answers.new.body")
  = f.text_area :body,
          class: "tutu-textarea tutu-field tutu-field--left",
          data: data_body

  = f.fields_for :attachments do |a|
    = a.label :file, t(".file")
    = a.file_field :file, class: "tutu-answer__file",
            data: data_file

  = render "components/buttons",
          f: f,
          form_button: form_naming("answers.form.submit", item),
          modifier: ["left", "full"],
          data: data_submit