ajaxOutputForAnswer = window.ajaxOutputForAnswer;
ajaxOutputForError = window.ajaxOutputForError;
showForAnswer = window.showForAnswer;
formForAnswer = window.formForAnswer;
bodyForAnswer = window.bodyForAnswer;

ajaxOutputForError.html('');

<% if @answer.errors.present? %>
  <% @answer.errors.full_messages.each do |m| %>
    ajaxOutputForError.html(
      '<%= j content_tag :div, m, id: 'error_explanation', class: 'no-margin--lr inner' %>'
    );
  <% end %>
<% else %>
  ajaxOutputForAnswer.html('<%= j render 'answers/answers' %>');
  showForAnswer.show();
  formForAnswer.hide();
  bodyForAnswer.val('');
<% end %>

window.setRandomColor();
window.resizeAllGridItems();