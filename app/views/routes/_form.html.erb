<h1><%= form_name %></h1>

<%= form_with model: model, local: true do |f| %>
  <%= render 'components/error_block', item: model %>

  <%= render 'components/table',
             caption: ["Имя", "Поезд", "Станции"] do %>
    <div class="tutu-table__row tutu-table__row--body">
      <%= table_cell f.text_field(:name) %>
      <%= table_cell_with do %>
        <% f.collection_check_boxes :train_ids, Train.all, :id, :number do |b| %>
          <%= b.label class: "tutu-label tutu-label--left" do %>
            <%= b.check_box %><%= b.object.number %>
          <% end %>
        <% end %>
      <% end %>
      <%= table_cell_with do %>
        <% f.collection_check_boxes :station_ids, Station.all, :id, :name do |b| %>
          <%= b.label class: "tutu-label tutu-label--left" do %>
            <%= b.check_box %><%= b.object.name %>
          <% end %>
        <% end %>
      <% end %>
    </div>
  <% end %>

  <%= content_tag :div, class: "" do %>
    <%= f.submit form_button, class: "tutu-button" %>
  <% end %>
<% end %>
