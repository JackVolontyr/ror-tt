<%= render "search" %>

<% if @routes.present? %>
  <%= render "index", notice: notice, title: "Пути", caption: get_caption("index") do %>
    <% @routes.each_with_index do |route, index| %>
      <%= render "components/table_row" do %>
        <%= table_cell index + 1 %>
        <%= render "route_cells", route: route %>
      <% end %>
    <% end %>
  <% end %>

<% else %>
  <%= content_tag :div, "Не найдено Путей.", class: "tutu-info" %>
<% end %>

<%= render "footer" %>