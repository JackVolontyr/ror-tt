<%= render "search" %>

<% if @routes.present? %>
  <%= render "index",
             notice: notice,
             title: "Пути",
             caption:  ["№", "Имя", "Поезд", "Станции", "", "", ""] do %>
    <% @routes.each_with_index do |route, index| %>
      <%= render "route_row", route: route do %>
        <%= table_cell index + 1 %>
      <% end %>
    <% end %>
  <% end %>

<% else %>
  <%= content_tag :div, "Не найдено Путей.", class: "tutu-info" %>
<% end %>

<%= render "components/footer",
           index_text: "К Путям", index_path: routes_path,
           add_text: "Добавить Путь", add_path: new_route_path %>