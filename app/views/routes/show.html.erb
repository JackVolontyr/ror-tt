<%= render 'helpers/show_item',
           item_name_text: 'Путь:',
           item_name: @route.name,
           item: @route,
           item_edit: edit_route_path(@route),
           item_path_name: 'К Путям',
           item_path: routes_path,
           item_path_new_text: 'Добавить Путь',
           item_path_new: new_route_path do %>

  <% if @route.trains[0]%>
    <br/>
    <% @route.trains.each do |train| %>
      <br/>
      <%= content_tag :strong, 'Поезд:' %>
      <%= train.number %>
    <% end %>
  <% end %>

  <% if @route.stations %>
    <br/>
    <% @route.stations.each do |station| %>
      <br/>
      <%= content_tag :strong, 'Станция:' %>
      <%= station.name %>
    <% end %>
  <% end %>

<% end %>