<%= render 'helpers/show_item',
           item_name_text: 'Номер:',
           item_name: @carriage.number,
           item: @carriage,
           item_edit: edit_carriage_path(@carriage),
           item_path_name: 'К Вагонам',
           item_path: carriages_path,
           item_path_new_text: 'Добавить Вагон',
           item_path_new: new_carriage_path do %>

  <strong><%= @carriage.carriage_type %></strong>
  <strong>
    <%= hidden_field(:carriage, :seats) %>
    <%= render "seats_script" %>
  </strong><br>
  <strong><%= Train.all.find_by(id: @carriage.train).number %></strong><br>

<% end %>
