<% if action_name == "show" %>
  <%= render 'components/table_options',
             item: [:admin, carriage.train, carriage],
             edit_item_path: [:edit, :admin, carriage.train, carriage] %>
<% else %>
  <%= table_cell "" %>
  <%= table_cell "" %>
  <%= table_cell "" %>
<% end %>