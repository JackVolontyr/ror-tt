<% carriage = item %>

<%= table_cell carriage.number %>
<%= table_cell get_carriage_types.key(carriage.type) %>
<%= table_cell carriage.bottom_seats %>
<%= table_cell carriage.top_seats %>
<%= table_cell carriage.side_bottom_seats %>
<%= table_cell carriage.side_top_seats %>
<%= table_cell carriage.seats %>

<%= render "components/table_cell", value: carriage.train do %>
  <%= link_to carriage.train.number,
              [:admin, carriage.train],
              class: "tutu-link--inline" %>
  (<%= t "h.position" %>: <%= carriage.position %>)
<% end %>

