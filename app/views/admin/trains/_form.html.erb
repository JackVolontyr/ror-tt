<h1><%= form_naming("admin.trains.form.title", @train) %></h1>

<%= form_with model: [:admin, @train], local: true do |f| %>
  <%= render "components/error_block", item: @train %>

  <%= render "components/table", caption: get_caption("trains", "form") do %>
    <%= render "components/table_row" do %>
      <%= render "form_cells", f: f %>
    <% end %>
  <% end %>

  <%= render "components/buttons",
             f: f,
             form_button: form_naming("admin.trains.form.submit", @train) %>
<% end %>