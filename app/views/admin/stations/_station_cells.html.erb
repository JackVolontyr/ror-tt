<%# TODO: (show_layout needs it) maybe first string is redundant, but I use it for understanding and clear %>
<% station = item %>

<%= table_cell station.name %>

<%= render "components/table_cell", value: station.routes do %>
  <% station.routes.each do |route| %>
    <%= link_to route.name, [:admin, route] %>
  <% end %>
<% end %>

<%= render "components/table_cell", value: station.tickets do %>
  <% station.tickets.each do |ticket| %>
    <%= ticket.name %>
  <% end %>
<% end %>

<%= render 'components/table_options',
           item: [:admin, station],
           edit_item_path: edit_admin_station_path(station) %>