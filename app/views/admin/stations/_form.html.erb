<h1><%= form_naming("admin.stations.form.title", @station) %></h1>

<%= form_with model: [:admin, @station], local: true do |f| %>
  <%= render "components/error_block", item: @station %>

  <%= render "components/table", caption: get_caption("stations", "form") do %>
    <div class="tutu-table__row tutu-table__row--body">
      <%= table_cell f.text_field(:name, class: "tutu-field") %>
      <%= render "components/form_checkbox_cell",
                 form: f,
                 main_method: :route_ids,
                 collection: Route.all,
                 value_method: :id,
                 text_method: :name %>
      <%= render "components/form_checkbox_cell",
                 form: f,
                 main_method: :ticket_ids,
                 collection: Ticket.all,
                 value_method: :id,
                 text_method: :name %>
    </div>
  <% end %>

  <%= render "components/buttons",
             f: f,
             form_button: form_naming("admin.stations.form.submit", @station) %>
<% end %>
