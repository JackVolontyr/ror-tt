<%= table_cell train.number %>

<%= render "components/table_cell", value: train.route do %>
  <%= link_to train.route.name, train.route %>
<% end %>

<%= render "components/table_cell", value: train.carriages do %>
  <% train.carriages.each do |c| %>
    <%= c.number %>
  <% end %>
<% end %>

<%= render 'components/table_options', item: train, edit_item_path: edit_train_path(train) %>