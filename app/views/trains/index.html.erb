<%= render "index",
           notice: notice,
           title: "Поезда",
           caption:  ["№", "Номер", "Путь", "Вагоны", "", "", ""] do %>
  <% @trains.each_with_index do |train, index| %>
    <%= render "components/table_row" do %>
      <%= table_cell index + 1 %>
      <%= render "train_cells", train: train %>
    <% end %>
  <% end %>
<% end %>

<%= render "components/footer",
           index_text: "К Поездам", index_path: trains_path,
           add_text: "Добавить Поезд", add_path: new_train_path %>