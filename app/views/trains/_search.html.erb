<% if flash[:seats_count] %>
  <% message = flash[:seats_count] %>
  В вагонах типа: "<%= inline_info message["carriages_type"] %>"
  доступно: "<%= inline_info message["seats_count"] %>"
  мест типа: "<%= inline_info message["seats_type"] %>"
  <% carriages_type_selected = message["carriages_type_selected"] %>
  <% seats_type_selected = message["seats_type_selected"] %>
<% end %>

<%= form_tag train_path, method: :get do %>
  <%= label_tag :carriages_type, "Тип вагона:" %>
  <%= select_tag :carriages_type,
                 options_for_select(get_carriage_types, carriages_type_selected || nil),
                 class: "tutu-field" %>
  <%= label_tag :seats_type, "Тип мест:" %>
  <%= select_tag :seats_type,
                 options_for_select(get_seat_types, seats_type_selected || nil),
                 class: "tutu-field" %>
  <%= submit_tag "Поиск", class: "tutu-button", name: nil %>
<% end %>