<%= render 'helpers/show_item',
           item_name_text: 'Номер:',
           item_name: @train.number,
           item: @train,
           item_edit: edit_train_path(@train),
           item_path_name: 'К Поездам',
           item_path: trains_path,
           item_path_new_text: 'Добавить Поезд',
           item_path_new: new_train_path do %>

  <% if @train.route %>
    <strong>Путь:</strong>
    <%= @train.route.name %>
  <% end %>

  <% if @train.carriages %>
    <strong>Вагоны:</strong>
    <%= @train.carriages.number %>
  <% end %>

<% end %>
