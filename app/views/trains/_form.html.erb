<h1><%= form_name %></h1>

<%= form_with model: model, local: true do |f| %>
  <%= render 'components/error_block', item: model %>

  <%= render 'components/table',
             caption: ["Номер", "Путь", "Вагоны"] do %>
    <div class="tutu-table__row tutu-table__row--body">
      <%= table_cell f.text_field(:number) %>
      <%= render "components/form_radio_cell", form: f, main_method: :route_id, collection: Route.all, value_method: :id, text_method: :name %>
      <%= render "components/form_checkbox_cell", form: f, main_method: :carriage_ids, collection: Carriage.all, value_method: :id, text_method: :number %>
    </div>
  <% end %>

  <%= content_tag :div do %>
    <%= f.submit form_button, class: "tutu-button" %>
  <% end %>
<% end %>