<h2><%= t "devise.shared.links.login" %></h2>

<%= form_for(resource,
             as: resource_name,
             url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, t("devise.registrations.new.email") %>
    <br />
    <%= f.email_field :email,
                      autofocus: true,
                      autocomplete: "email",
                      class: "tutu-field",
                      data: { spec: "sign-in__email" } %>
  </div>

  <div class="field">
    <%= f.label :password, t("devise.registrations.new.password") %>
    <br />
    <%= f.password_field :password,
                         autocomplete: "current-password",
                         class: "tutu-field",
                         data: { spec: "sign-in__password" } %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, t("devise.registrations.new.remember_me") %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit t("devise.shared.links.login"),
                 class: "tutu-button",
                 data: { spec: "sign-in__login" } %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
