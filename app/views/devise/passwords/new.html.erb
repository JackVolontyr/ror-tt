<h2><%= t "devise.shared.links.forgot" %></h2>

<%= form_for(resource,
             as: resource_name,
             url: password_path(resource_name),
             html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, t("devise.registrations.new.email") %>
    <br />
    <%= f.email_field :email,
                      autofocus: true,
                      autocomplete: "email",
                      class: "tutu-field" %>
  </div>

  <div class="actions">
    <%= f.submit t(".reset"), class: "tutu-button" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
