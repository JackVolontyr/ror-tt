var W = window;

W.editQuestionError.html('');

<% if @question.errors.present? %>
  W.editQuestionError.html('<%= j render 'error_explanation' %>');
<% else %>
  W.editQuestionTitleOutput.html('<%= j @question.title %>');
  W.editQuestionBodyOutput.html('<%= j @question.body %>');
  W.editQuestionForm.hide();
<% end %>

W.resizeAllGridItems();